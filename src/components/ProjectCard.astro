---
const { title, img, desc, url, badges, target = "_blank" } = Astro.props;
import { Image } from "@astrojs/image/components";
---

<div
  class="rounded-lg bg-base-100 mb-10"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            aspectRatio="16:9"
            width={750}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badges && badges.map((badge:any) => <div class="badge badge-secondary mx-2">{badge}</div>)
          }
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
      </div>
    </div>
  </a>
</div>